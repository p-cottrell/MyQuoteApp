<% if is_administrator? %>
  <p style="color: green"><%= notice %></p>
  
  <h1>Quotes</h1>
  
  <div id="quotes">
    <% @quotes.each do |quote| %>
      <%= render quote %>
      <p>
        <%= link_to "Show this quote", quote %>
      </p>
    <% end %>
  </div>
<% else %>
  <p>You are not authorised to view this page.</p>
<% end %>
