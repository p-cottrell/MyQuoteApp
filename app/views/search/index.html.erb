<h3 style="padding-top: 10px;">Search for quotes by philosopher</h3>
<%= form_tag search_path, method: :get do %>
    <div class="form-group" style="padding-bottom: 10px;">
    <%= text_field_tag :philosopher_query, params[:philosopher_query], placeholder: 'Enter a philosopher', class: "form-control" %>
    </div>
    <%= submit_tag 'Search Quotes', class: "btn btn-primary" %>
<% end %>

<% if params[:philosopher_query].present? %>
    <% if @philosopher_match.present? %>
        <h4 style="padding-top: 15px;">Results:</h4>
            <% @philosopher_match.each do |philosopher| %>
            <h5 class="text-primary"><%= philosopher.fname %> <%= philosopher.lname %></h5>
            <p><a href="/philosophers/<%= philosopher.id %>">View Philosopher Profile</a></p>
            <h6>Quotes:</h6>
            <ul>
              <% philosopher.quotes.each do |quote| %>
                <li>
                  <%= truncate(quote.text, length: 100) %> <!-- This truncates the quote text to 100 characters (or any number you prefer) -->
                  [<a href="/quotes/<%= quote.id %>">Read full quote</a>]
                </li>
              <% end %>
            </ul>
            <br />
            <% end %>
    <% else %>
        <p>No matching philosophers found.</p>
    <% end %>
<% end %>